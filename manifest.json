{
  "manifest_version": 2,
  "name": "Spoken Text Editor",
  "description": "This extension lets you edit web forms with your voice.",
  "version": "2",
  "minimum_chrome_version": "41",
  "icons": {
    "16": "media/favicon16x16.png",
    "32": "media/favicon32x32.png"
  },
  "background": {
    "scripts": ["js/chrome-extension-background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "media/favicon32x32.png",
    "default_title": "Turn on voice control for this tab"
  },
  "options_ui": {
    "page": "html/chrome-extension-options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "optional_permissions": [
    "clipboardRead", "clipboardWrite"
  ],
  "permissions": [
    "activeTab"
  ]
}

